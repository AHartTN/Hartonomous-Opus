{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-clang-release",
      "displayName": "Windows Clang Release",
      "description": "Release build for Windows using Clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/toolchain.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Linux GCC Release",
      "description": "Release build for Linux using GCC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-clang-release",
      "displayName": "macOS Clang Release",
      "description": "Release build for macOS using Clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-clang-release",
      "configurePreset": "windows-clang-release",
      "configuration": "Release"
    },
    {
      "name": "linux-gcc-release",
      "configurePreset": "linux-gcc-release",
      "configuration": "Release"
    },
    {
      "name": "macos-clang-release",
      "configurePreset": "macos-clang-release",
      "configuration": "Release"
    }
  ]
}