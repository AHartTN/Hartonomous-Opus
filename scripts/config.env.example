# ============================================================================
# Hartonomous Hypercube Configuration
# ============================================================================
# Copy this to config.env and customize for your environment.
# These variables are APP-SPECIFIC and won't clash with system PostgreSQL.
# ============================================================================

# Database connection (do NOT use PGPASSWORD - that's global)
HC_DB_HOST=hart-server
HC_DB_PORT=5432
HC_DB_USER=postgres
HC_DB_PASS=postgres
HC_DB_NAME=hypercube

# Build configuration
HC_BUILD_TYPE=Release
# Set to number of CPU cores, or leave empty for auto-detect
# HC_PARALLEL_JOBS=16

# Ingestion defaults
HC_INGEST_THRESHOLD=0.5

# Model discovery paths (semicolon-separated for Windows, colon for Linux)
# These are scanned recursively for HuggingFace model directories
# HC_MODEL_PATHS=D:\Models;C:\Users\you\.cache\huggingface\hub

# Advanced ingestion settings
HC_EDGE_THRESHOLD=0.3
HC_MAX_EDGES_PER_TOKEN=100
