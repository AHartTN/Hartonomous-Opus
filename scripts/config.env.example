# Hartonomous Hypercube Configuration
# Copy this to config.env and customize for your environment
# These variables are APP-SPECIFIC and won't clash with system PostgreSQL

# Database connection (do NOT use PGPASSWORD - that's global)
HC_DB_HOST=localhost
HC_DB_PORT=5432
HC_DB_USER=hartonomous
HC_DB_PASS=hartonomous
HC_DB_NAME=hypercube

# Build configuration
HC_BUILD_TYPE=Release
HC_PARALLEL_JOBS=4

# Ingestion defaults
HC_INGEST_THRESHOLD=0.1
